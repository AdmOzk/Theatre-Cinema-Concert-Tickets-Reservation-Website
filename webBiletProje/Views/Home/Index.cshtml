            display: table;
            clear: both;
        }

        .cards-wrapper {
            display: flex;
            justify-content: center;
        }

        .card img {
            width: 45rem;
        }

        .card {
            margin: 0 0.5em;
            box-shadow: 2px 6px 8px 0 rgba(22, 22, 26, 0.18);
            border: none;
            border-radius: 0;
        }

        .carousel-inner {
            padding: 1em;
        }


        .grid-item {
            margin-right: 10px; /* You can adjust the value to set the desired space */
        }

        .carousel-inner .images-wrapper img {
            height: 450px; /* Adjust the value to your desired height */
        }







        .grid-container {
            display: grid;
            grid-template-columns: 1fr 0.5fr 0.5fr 0.5fr 0.5fr;
            gap: 1em;
            margin-bottom: 6em;
        }

        .grid-item {
            overflow: hidden;
            border-radius: 8px;
        }

            .grid-item.large {
                grid-row: span 2;
            }

            .grid-item img {
                max-width: 100%;
                max-height: 100%;
                object-fit: cover;
            }

        .images-wrapper {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .images-wrapper img {
                flex: 0 0 auto;
            }

        .img-fluid {
            max-width: 100%;
            height: auto;
        }




        .column {
            float: left;
            width: 33.33%;
            padding: 10px;
            height: 600px;
            background-size: cover;
            background-position: center;
            position: relative;
            text-align: center; /* Center the text within the column */
        }

            .column img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                position: absolute;
                top: 0;
                left: 0;
                z-index: -1;
            }

        .column-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1;
            text-align: center;
            color: #fff;
        }

        .button-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
